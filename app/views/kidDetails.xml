<Alloy> 
		<Window title="Kids Details" id="win"   >
			<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
			<RightNavButton platform="ios">
		        <View>
		         	<Button id="editButton" onTouchend="doEditKids" title="Edit" right="0"   /> 
		        </View>
	        </RightNavButton>
	        <Menu id="menu" platform="android">
			 
	            <MenuItem id="bookmarkBtn" title="Edit" onClick="doEditKids" showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM"/>
	        </Menu>
			<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
		        <ActivityIndicator id="activityIndicator" />
		    	<Label top="5" class="center" text="Loading" color="#ffffff" />
			</View> 
				<ScrollView scrollType="vertical"  contentHeight="Ti.UI.SIZE"  class="wfill vert hfill">
					<View width="100" height="100" borderRadius="50"  backgroundColor="#f5f5f5" top="10">
						<ImageView width="100" height="100" borderRadius="50" id="thumbPreview" />
					</View>
					
					<Label id="fullname" textAlign="center" class="padding themeColor font_big" top="10"></Label> 
				
					<View id="table" height="180"  backgroundColor="#ffffff" layout="vertical" > 
						<View id="tvrFieldDate" height="Ti.UI.SIZE" layout="vertical"  >
							<View  layout="horizontal" height="45" width="100%" textAlign="right" >
								<Label text="Birthdate" top="12" width="40%" class="title_Label"  />
								<Label text="" top="12" color="#707070" id="date_value" textAlign="right" width="50%"  />
							</View>
						</View>
						<View class="line" />
						<View id="tvrFieldGender" height="Ti.UI.SIZE" layout="vertical"  >
							<View  layout="horizontal" height="45" width="100%" >
								<Label text="Gender" width="40%" top="12" class="title_Label"  />
								<Label text="" top="12" color="#707070" id="gender_value" textAlign="right" width="50%"   />
							</View>
						</View>
						<View class="line" />
						<View id="tvrHobby" height="Ti.UI.SIZE" layout="vertical"  >
							<View  layout="horizontal" height="45" width="100%" textAlign="right" >
								<Label text="Hobby" top="12" width="40%" class="title_Label"  /> 
								<Label text="" top="12" color="#707070" id="hobby" textAlign="right" width="50%"   />  
							</View>
						</View>  
						<View class="line" />
						<View id="tvrContact" height="Ti.UI.SIZE" layout="vertical" >
							<View  layout="horizontal" height="45" width="100%" textAlign="right" >
								<Label text="Contact" top="12" width="40%" class="title_Label"  /> 
								<Label text="" top="12" color="#707070" id="parent_contact" textAlign="right" width="50%"   />  
							</View>
						</View>   
					</View>
					
					<View class="wfill vert hsize" id="myKidsSchoolView"  />
					
					<View class="wfill vert hsize" id="myKidsTuitionView" bottom="10" top="10" />
				</ScrollView>
			 
		</Window> 
</Alloy>