<Alloy>
	<Window title="" id="win"  backgroundImage="/images/home_background.jpg">
		<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
		 
		<View id="main" layout="vertical" backgroundColor="#F6F6F6" height="100%" >
	 
		 <ScrollView layout="vertical" id="infoView" scrollType="vertical" backgroundColor="#ffffff" height="Ti.UI.FILL" width="Ti.UI.FILL" top="200">
 
		 	<View class="box padding wfill hsize horz" backgroundColor="#F5F5F5" bottom="0">
		 		 <View id="educationMap" height="0" width="Ti.UI.FILL" /> 
		 		<View class="box wfill horz" backgroundColor="#ffffff" top="0" height="80">
			 		<View width="32%" height="80" onClick="direction2here" layout="vertical">
			 			<ImageView image="/images/map.png" width="40" height="40" top="10" />
			 			<Label class="font_dark_grey h6 center" >Direction To Here</Label>
			 		</View>
			 		<View width="1" height="80" backgroundColor="#dfe0e4" />
			 		<View width="32%" height="80" onClick="clickToCall" layout="vertical"  >
			 			<ImageView image="/images/call.png" width="30" height="30" top="10" />
			 			<Label class="font_dark_grey h6 center" top="10" >Call</Label>
			 		</View>
			 		<View width="1" height="80" backgroundColor="#dfe0e4" />
			 		<View width="auto" height="80" onClick="addToContact" id="add2contact" layout="vertical" >
			 			<ImageView image="/images/add_to_contact.png" width="35" height="35" top="10" />
			 			<Label class="font_dark_grey h6 center"  width="Ti.UI.FILL" top="5">Add To Contact</Label>
			 		</View>
			 	</View>
		 		<View layout="vertical" id="educationDetails" width="Ti.UI.FILL" height="Ti.UI.SIZE">
					 	<Label id="educationName" class="education_name themeColor bold"   bottom="10"/>
				 		<Label text="Address" class="education_address educationLabelTitle" />
					 	<Label id="educationAddress" class="education_address" bottom="10" /> 
					 	
					 	<Label text="Coordinate" class="education_address educationLabelTitle" />
					 	<Label id="educationLocation" class="education_address"  bottom="10"   />
					 	
					 	<Label text="Telephone" class="education_address educationLabelTitle" />
					 	<Label id="educationTel" class="education_address"  bottom="10"   />
					 	
					 	<Label text="Fax" class="education_address educationLabelTitle" />
					 	<Label id="educationFax" class="education_address"  bottom="10"   /> 
				 	 
			 	</View>
			 </View>
 
		 </ScrollView>
		 </View>
	</Window>
</Alloy>