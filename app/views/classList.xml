<Alloy>  
		<Window title="Class List" id="win" >
			 
			<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWin" />
			<View platform="ios" top="0" height="50" backgroundColor="#B8D5BA"> 
				<View left="0" zIndex="9" id="backButton" width="20%" onClick="closeWin">
					<ImageView left='10'  width="25" height="25" image="/images/btn-back.png" />
				</View>
				<View >
					<Label id="titleLbl"  class='hsize themeColor' textAlign="center">School list</Label>
			   </View>
			</View>
			<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
		        <ActivityIndicator id="activityIndicator" />
		    	<Label top="5" class="center" text="Loading" color="#ffffff" />
			</View> 
			 
			<View class="wfill hfill vert" id="schoolContainer" top="50"  backgroundImage="/images/home_background.jpg" /> 
		</Window> 
</Alloy>