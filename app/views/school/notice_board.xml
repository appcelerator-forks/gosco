<Alloy>
	<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
		<ActivityIndicator id="activityIndicator" />
		<Label top="5" class="center" text="Loading" color="#ffffff" />
	</View> 
    <ScrollView class="wfill hfill vert"  contentHeight="Ti.UI.SIZE" contentWidth="Ti.UI.FILL">
    	<View id="schoolInfo" class="wfill hsize padding box vert">
    		<View class="wfill hsize padding vert ">
    			<View class="horz wfill" height="60">
					<View width="50" height="50" borderRadius="25"  backgroundColor="#f5f5f5"   top="5">
						<ImageView width="50" height="50" image="/images/avatar.jpg" borderRadius="25" id="thumbPreview" />
					</View>
					<Label class="h5 themeColor bold" left="10"    id="schoolName"></Label>
				</View>
	    		
	    		<Label class="h6 font_dark_grey" id="schoolAddress"></Label>
	    		<Label class="h6 font_dark_grey" id="schoolTel"></Label>
    		</View>
    	</View>
    	<View class="wfill" height="35">
			<View  width="130" height="30" left="15" class="padding box"  top="5">
				<Label id="lblAnnouncement" textAlign="center" class="  themeColor h5 bold"  >Announcement</Label>
			</View>
			<View left="155" width="100" height="30" class="padding box"   top="5">
				<Label id="lbleInfo" textAlign="center" class="  themeColor h5 bold"  >e-Info</Label>
			</View>
			
			<ImageView id="refresh" width="30" height="30" right="10" image="/images/icon_refresh.png" /> 
		</View>
    	
    	<View id="boardSv" class="wfill hsize " backgroundColor="#ffffff" top="0"  />
    	 
	</ScrollView>
</Alloy>