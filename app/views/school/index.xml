<Alloy>
	<TabGroup id="school_tg" tabsTintColor="#10844D"   onOpen="doOpen">
		<Tab  title="Notice Board" icon="/images/icons/icon_announcement.png" activeIcon="/images/icons/icon_announcement_active.png" iconIsMask="false" activeIconIsMask="false"  activeIconIsMask="false">
			<Window title="Notice Board" backgroundColor="#F1F1F1">
				<LeftNavButton platform="ios">
			        <View onClick="backToHome">
			        	<ImageView left='0'  width="25" height="25" image="/images/btn-back.png" />  
			        </View> 
			    </LeftNavButton>
			    <RightNavButton platform="ios">
			        <View onClick="removeEducation">
			        	<ImageView right='10'  width="25" height="25" image="/images/remove.png" />  
			        </View>
			    </RightNavButton>
				<Require id="noticeBoardDetailsView" src="school/notice_board" ></Require>
			</Window>
		</Tab>
		<Tab color="white" title="Events" icon="/images/icons/icon_events.png" activeIcon="/images/icons/icon_events_active.png" iconIsMask="false" activeIconIsMask="false"  activeIconIsMask="false">
			<Window title="School Events" backgroundColor="#F1F1F1">
				<LeftNavButton platform="ios">
			        <View onClick="backToHome">
			        	<ImageView left='0'  width="25" height="25" image="/images/btn-back.png" />  
			        </View> 
			    </LeftNavButton>
				<Require id="eventsDetailsView" src="school/events"></Require>
			</Window>
		</Tab>
		<Tab title="Homework" icon="/images/icons/icon_homeworks.png" activeIcon="/images/icons/icon_homeworks_active.png" iconIsMask="false" activeIconIsMask="false"  activeIconIsMask="false">
			<Window title="Homework" backgroundColor="#F1F1F1">
				<LeftNavButton platform="ios">
			        <View onClick="backToHome">
			        	<ImageView left='0'  width="25" height="25" image="/images/btn-back.png" />  
			        </View> 
			    </LeftNavButton>
				<Require id="homeworkDetailsView" src="school/homework"></Require>
			</Window>
		</Tab>
		<Tab title="Awards" icon="/images/icons/icon_awards.png" activeIcon="/images/icons/icon_awards_active.png" iconIsMask="false" activeIconIsMask="false"  activeIconIsMask="false">
			<Window title="School Award" backgroundColor="#F1F1F1">
				<LeftNavButton platform="ios">
			        <View onClick="backToHome">
			         	<ImageView left='0'  width="25" height="25" image="/images/btn-back.png" />  
			        </View>
			    </LeftNavButton>
				<Require id="awardDetailsView" src="school/award"></Require>
			</Window>
		</Tab>
		<Tab title="Co-Curriculum" icon="/images/icons/icon_coccurricula.png" activeIcon="/images/icons/icon_coccurricula_active.png" iconIsMask="false" activeIconIsMask="false"  activeIconIsMask="false">
			<Window title="Curriculum" id="curriculum_win" backgroundColor="#F1F1F1">
				<LeftNavButton platform="ios">
			        <View onClick="backToHome">
			        	<ImageView left='0'  width="25" height="25" image="/images/btn-back.png" />  
			        </View> 
			    </LeftNavButton>
				<Require  id="curriculumDetailsView" src="school/curriculum"></Require>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>