<Alloy>
	<Window title="Register" id='win' backgroundImage="/images/home_background.jpg">
		<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
		        <ActivityIndicator id="activityIndicator" />
		    	<View class="hsize">
		    		<Label top="5" class="wsize" text="Loading" color="#ffffff" />
		    	</View>
		</View>
		<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
		<ScrollView class="wfill hfill vert"  scrollType="vertical">
			<ImageView image="/images/full_logo.png" top="10" width="30%" />
			<TextField id="fullname" hintText="Full Name" top="10"></TextField>
			<TextField id="mobile" hintText="Mobile Number" top="10"></TextField>
			<TextField id="email" hintText="Email Address" top="10"></TextField>
			<TextField id="username" hintText="Username" top="10"></TextField>
			<TextField id="password" hintText="Password" top="10" passwordMask="true"></TextField>
			<TextField id="confirm" hintText="Confirm Password" top="10" passwordMask="true"></TextField>
			<Button onClick="doRegister" backgroundColor="#5375BD" top="10" width="250" class="button" title="Register"></Button>
		</ScrollView>
	</Window>
</Alloy>